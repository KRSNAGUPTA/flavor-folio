<style>
    .rounded-lg {
        border-radius: 1.5rem;
        margin-bottom: 15px;
    }

</style>

<div class="row row-cols-1 row-cols-lg-3 g-2 g-lg-3">
    <% if (typeof recipe !== 'undefined') { %>
        <div class="col">
            <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top rounded-lg" style="top:20px;" loading="lazy">
        </div>
        <div class="col">
            <div class="row">
                <div class="col-12">
                    <h1><%- recipe.name %></h1>
                </div>
                <div class="col-12 mb-4"><i class="bi bi-tag "></i><%- recipe.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instruction</h4>
                    <%- recipe.instruction %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe.ingredients.forEach(function(ingredient, index) { %>
                            <li class="list-group-item">
                                <%= ingredient %>
                            </li>
                        <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    <% } %>
</div>
