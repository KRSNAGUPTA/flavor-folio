<% if (recipe !==null) { %>
    <h1 class="pb-4">Yummy Recipe!</h1>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- recipe.name %></li>
        </ol>
    </nav>

    <div class="row">

        <style>
            .rounded-lg {border-radius: 2.5rem;margin-bottom: 33px; margin-left: -12px;margin-top: 4px;}
        </style>
        <div class="col">
            <img src="/uploads/<%- recipe.image %>" class="img-fluid sticky-top rounded-lg" style="top:20px;"
                loading="lazy">
        </div>
        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12">
                    <h1><%- recipe.name %></h1>
                </div>
                <div class="col-12 mb-4"><i class="bi bi-tag "></i><%- recipe.category %></div>
                <div class="col-12" style="white-space: pre-line;">
                    <h4>Cooking Instruction</h4>
                    <%- recipe.instruction %>
                </div>
            </div>
            <div class="row pt-4">
                <div class="col-12">
                    <h4>Ingredients</h4>
                    <ul class="list-group list-group-flush">
                        <% recipe.ingredients.forEach(function(ingredient, index) { %>
                            <li class="list-group-item">
                                <%= ingredient %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <% } else { %>
        <p>No item found ðŸ˜”</p>
        <% } %>